{
  "name": "fractracker-sec-ui",
  "author": "Edward Carl <55811915+edwardmcarl@users.noreply.github.com>",
  "private": true,
  "engines": {
    "node": ">=v16.13",
    "npm": ">=8.1"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "build:full": "cd .. && npm run build",
    "postinstall": "npx electron-rebuild",
    "test": "npm run test:main && npm run test:preload && npm run test:renderer && npm run test:e2e",
    "test:e2e": "npm run build && vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:preload": "vitest run -r packages/preload --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts,tsx,vue",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer",
    "nanotest": "npx --node-options='--inspect' nano-staged"
  },
  "devDependencies": {
    "@types/bootstrap": "^5.1.9",
    "@types/bootstrap-datepicker": "^0.0.15",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "5.12.0",
    "@vitejs/plugin-react": "^1.2.0",
    "cross-env": "7.0.3",
    "electron": "17.0.1",
    "electron-builder": "22.14.13",
    "electron-devtools-installer": "3.2.0",
    "electron-rebuild": "^3.2.7",
    "eslint": "8.9.0",
    "eslint-plugin-react": "7.28.0",
    "happy-dom": "2.39.1",
    "nano-staged": "0.6.0",
    "playwright": "1.19.1",
    "react-bootstrap": "^2.1.2",
    "typescript": "4.5.5",
    "vite": "2.8.4",
    "vitest": "0.4.2"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.2",
    "bootstrap": "^5.1.3",
    "bootstrap-datepicker": "^1.9.0",
    "electron-updater": "4.6.5",
    "exit-hook": "^3.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "zerorpc": "github:edwardmcarl/zerorpc-node"
  }
}
