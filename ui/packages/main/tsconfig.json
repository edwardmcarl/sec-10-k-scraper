{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,

    "types" : ["node"],

    "baseUrl": ".",
    "paths": {
      "/@/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "../../types/**/*.d.ts",
    "external.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
