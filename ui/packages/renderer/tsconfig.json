{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "useDefineForClassFields": true,
    "allowJs": false,
    "sourceMap": false,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "isolatedModules": true,
    "jsx":"react-jsx",
    "types" : ["node"],
    "baseUrl": ".",
    "paths": {
      "/@/*": [
        "./src/*"
      ]
    },
    "lib": ["ESNext", "dom", "dom.iterable"]
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts",
    "../preload/contracts.d.ts"
, "src/ts/index.ts"  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
  ]
}
